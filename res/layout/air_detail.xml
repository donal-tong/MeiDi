<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wash_bg"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/nav"
        android:layout_height="44dp"
        android:layout_width="match_parent"
         android:background="@drawable/tab_background"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView 
            android:id="@+id/titleBarView"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
      		android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            />
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ImageView 
	        android:layout_marginLeft="30dp"
	        android:layout_marginTop="30dp"
            android:layout_width="115dp"
            android:layout_height="99dp"
            android:background="@drawable/wash_robot"
            />
	    
	    <RelativeLayout 
	        android:layout_marginTop="25dp"
	        android:layout_alignParentRight="true"
	            android:layout_width="114dp"
	            android:layout_height="114dp"
	            android:layout_marginRight="30dp"
	            android:orientation="vertical"
	            android:background="@drawable/air_circle"
	            android:layout_centerHorizontal="true"
	            >
	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textColor="#002141"
	                android:layout_centerInParent="true"
	                android:id="@+id/windTV"
	                android:textSize="20sp"
	                android:gravity="center"
	                />
	        </RelativeLayout>
	</RelativeLayout>
	
	<RelativeLayout 
	        android:layout_marginTop="25dp"
	            android:layout_width="match_parent"
	            android:layout_height="100dp"
	            android:layout_marginLeft="32dp"
	        android:layout_marginRight="32dp"
	        android:background="#a5e0f6"
	            >
	<TextView
	    android:id="@+id/des"
	    android:layout_width="174dp"
	    android:layout_height="100dp"
	    android:layout_centerHorizontal="true"
	    android:gravity="center_vertical|left"
	    android:textColor="#002141"
	    android:textSize="13sp" />

	</RelativeLayout>
	
	<LinearLayout 
	    android:background="#a5e0f6"
	            android:layout_marginTop="10dp"
	            android:orientation="horizontal"
	        	android:layout_width="match_parent"
	        	android:layout_marginLeft="32dp"
	        android:layout_marginRight="32dp"
	        	android:layout_height="100dp"
	        	>
	        	<RelativeLayout 
	        	    android:id="@+id/day1View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    >
	        	    <TextView 
	        	        android:id="@+id/day1TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view1"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <View 
	        	        android:id="@+id/view1"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="PM10"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	        	<RelativeLayout 
	        	    android:id="@+id/day2View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:orientation="vertical"
	        	    >
	        	    <TextView 
	        	        android:id="@+id/day2TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view2"
	        	        android:layout_centerHorizontal="true"
	        	        android:textSize="11sp"
	        	        />
	        	    <View 
	        	        android:id="@+id/view2"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="PM2.5"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	        	<RelativeLayout 
	        	    android:id="@+id/day3View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:orientation="vertical"
	        	    >
	        	    <TextView 
	        	        android:id="@+id/day3TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view3"
	        	        android:layout_centerHorizontal="true"
	        	        android:textSize="11sp"
	        	        />
	        	    <View 
	        	        android:id="@+id/view3"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="NO2"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	        	<RelativeLayout 
	        	    android:id="@+id/day4View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:orientation="vertical"
	        	    >
	        	    
	        	    <TextView 
	        	        android:id="@+id/day4TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view4"
	        	        android:layout_centerHorizontal="true"
	        	        android:textSize="11sp"
	        	        />
	        	    <View 
	        	        android:id="@+id/view4"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="SO2"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	        	<RelativeLayout 
	        	    android:id="@+id/day5View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:orientation="vertical"
	        	    >
	        	    <TextView 
	        	        android:id="@+id/day5TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view5"
	        	        android:layout_centerHorizontal="true"
	        	        android:textSize="11sp"
	        	        />
	        	    <View 
	        	        android:id="@+id/view5"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="O3"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	        	<RelativeLayout 
	        	    android:id="@+id/day6View"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="match_parent"
	        	    android:orientation="vertical"
	        	    >
	        	    <TextView 
	        	        android:id="@+id/day6TV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:layout_above="@+id/view6"
	        	        android:layout_centerHorizontal="true"
	        	        android:textSize="11sp"
	        	        />
	        	    <View 
	        	        android:id="@+id/view6"
	        	        android:layout_gravity="center_horizontal"
	        	        android:layout_width="8dp"
	        	        android:layout_height="72dp"
	        	        android:layout_alignParentBottom="true"
	        	        android:layout_marginBottom="15dp"
	        	        android:layout_centerHorizontal="true"
	        	        />
	        	    
	        	    <TextView 
	        	        android:layout_width="wrap_content"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:text="CO"
	        	        android:textSize="11sp"
	        	        android:layout_centerHorizontal="true"
	        	        android:layout_alignParentBottom="true"
	        	        />
	        	</RelativeLayout>
	        	
	    	</LinearLayout>
	    	
	<TextView 
	    android:layout_marginTop="10dp"
	        	        android:id="@+id/timeTV"
	        	        android:layout_width="match_parent"
	        	        android:layout_height="wrap_content"
	        	        android:gravity="center"
	        	        android:textColor="#002141"
	        	        android:textSize="13sp"
	        	        />
	        
</LinearLayout>
