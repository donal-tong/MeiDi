<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:id="@+id/contentView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        >
        <RelativeLayout 
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/tempTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:gravity="top"
            />
        <ImageView 
            android:id="@+id/cImageView"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tempTV"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/c"
            android:visibility="invisible"
            />
        <TextView 
            android:id="@+id/weatherTV"
            android:layout_toRightOf="@+id/cImageView"
            android:layout_alignBottom="@+id/tempTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            />
        <TextView 
            android:id="@+id/windTV"
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/tempTV"
            android:layout_alignLeft="@+id/tempTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
        <TextView 
            android:id="@+id/wetTV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/windTV"
            android:layout_alignBottom="@+id/windTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
        <TextView 
            android:id="@+id/dayTV"
            android:layout_below="@+id/windTV"
            android:layout_alignLeft="@+id/windTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
        <TextView 
            android:id="@+id/lunarTV"
            android:layout_below="@+id/dayTV"
            android:layout_alignLeft="@+id/dayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    
    <ListView
        android:id="@+id/listView"
        android:layout_width="140dp"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:listSelector="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:fadingEdge="none"
        
        />
    </RelativeLayout>
    

</RelativeLayout>
