<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <RelativeLayout 
        android:id="@+id/nav"
        android:layout_height="44dp"
        android:layout_width="match_parent"
         android:background="@drawable/tab_background"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView 
            android:id="@+id/titleBarView"
            android:layout_width="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
      		android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/dayTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nav"
        android:textSize="80sp"
        android:textColor="#009039"
        />
     <TextView 
        android:layout_below="@+id/dayTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lunTV"
        android:textSize="20sp"
        android:textColor="#61b84b"
        android:layout_marginBottom="10dp"
        />	
        
     
     <TextView 
        android:layout_below="@+id/lunTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/yTV"
        android:textSize="20sp"
        android:textColor="#009039"
        android:padding="8dp"
        />	
	<TextView 
        android:layout_below="@+id/yTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/jTV"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="#787b77"
        />	
</RelativeLayout>
